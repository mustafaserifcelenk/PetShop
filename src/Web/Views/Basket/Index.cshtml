@{
    ViewBag.Title = "Basket";
}

<h1>Basket</h1>

<div class="row">
    <div class="col-md-8">
        <table class="table table-basket">
            <tbody>
                <tr>
                    <td>
                        <img src="~/images/samples/1.png" alt="" width="100" height="100" />
                    </td>
                    <td>Product Name</td>
                    <td>
                        <input class="form-control quantity" type="number" min="0" value="1" />
                    </td>
                    <td>
                        $549.90
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <div class="card p-3 bg-light">
            <div class="car-body">
                <div class="h1 text-center text-primary pt-3">
                    <i class="fas fa-shopping-basket"></i>
                </div>
                <h2 class="text-center my-4">
                    Total: $549.90
                </h2>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning btn-block">Continue to Shopping</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-success btn-block">Proceed to Checkout</a>
            </div>
        </div>
    </div>
</div>
